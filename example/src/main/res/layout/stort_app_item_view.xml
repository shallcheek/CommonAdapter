<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/app_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="腾讯新闻"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@id/app_image"
        app:layout_constraintTop_toBottomOf="parent" />

    <com.chaek.android.RatingBar
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:text="Hello World!"
        app:layout_constraintLeft_toRightOf="@id/app_image"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:rating_flag="FIVE"
        app:rating_star_color="#f21058"
        app:rating_star_empty_color="#8e7d7d"
        app:rating_star_height="10dp"
        app:rating_star_margin="1dp"
        app:rating_star_src="@drawable/star"
        app:rating_star_width="10dp"
        app:rating_start_count="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="10dp"
        android:text="71.61M"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/start"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="全方位新闻,提供高效优质的资讯服务"
        android:textColor="#999999"
        android:textSize="11sp"
        app:layout_constraintLeft_toRightOf="@id/app_image"
        app:layout_constraintTop_toBottomOf="@id/start" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/install_bg"
        android:gravity="center"
        android:text="安装"
        android:textColor="#b91b1b"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>